-var u = HamQTH.search[0]
fieldset
	if u
		if _id
			legend #{_id} #{u.nick} #{u.grid}
		else
			legend User Lookup
		if u.picture
			-url = u.picture[0]
			img.userimage(src=url)
		.userdata
			if _id
				#usercall.callsign #{_id}
				br
			| #{u.adr_name}
			br
			if u.adr_street1
				| #{u.adr_street1}
				br
			| #{u.adr_city}
			if u.us_state
				| , #{u.us_state}
			if u.adr_zip
				| &nbsp;#{u.adr_zip}
			br
			| #{u.country}
			br
			if u.email
				- emaila = 'mailto:'+u.email
				| E-Mail: 
				a(href=emaila)
					| #{u.email}
				br
			if u.jabber
				| Jabber: #{u.jabber}
				br
			if u.skype
				| Skype: #{u.skype}
				br
			if u.web
				- webURL = u.web[0]
				a(href=webURL target='#{_id}') #{u.web}
				br
			if mapURL
				-mapit = mapURL
				a(href=mapit target='#{_id}') Map
				br
				br
	else
		legend _id
		p User Not Found!
	button.userclose(onclick="$('#userlookup').empty()") Close
